<digester-rules>

    <pattern value="mapping">

        <set-properties-rule />

        <pattern value="include">
            <object-create-rule classname="org.safehaus.penrose.mapping.MappingRule" />
            <set-properties-rule />
            <set-next-rule methodname="addContent" />
        </pattern>

        <pattern value="entry">

            <object-create-rule classname="org.safehaus.penrose.mapping.EntryDefinition" />
            <set-properties-rule />

            <call-method-rule pattern="script" methodname="setScript" paramcount="0" />

            <call-method-rule pattern="oc" methodname="addObjectClass" paramcount="0" />

            <pattern value="at">

                <object-create-rule classname="org.safehaus.penrose.mapping.AttributeDefinition" />
                <set-properties-rule />

                <call-method-rule pattern="expression" methodname="setExpression" paramcount="0" />
                <set-next-rule methodname="addAttributeDefinition" />

            </pattern>

            <pattern value="source">

                <object-create-rule classname="org.safehaus.penrose.mapping.Source" />
                <set-properties-rule />
                <call-method-rule pattern="source-name" methodname="setSourceName" paramcount="0" />
                <call-method-rule pattern="connection-name" methodname="setConnectionName" paramcount="0" />

                <pattern value="field">
                    <object-create-rule classname="org.safehaus.penrose.mapping.Field" />
                    <set-properties-rule />
                    <call-method-rule pattern="expression" methodname="setExpression" paramcount="0" />
                    <set-next-rule methodname="addField" />
                </pattern>

                <set-next-rule methodname="addSource" />
            </pattern>

            <pattern value="relationship">

                <object-create-rule classname="org.safehaus.penrose.mapping.Relationship" />
                <call-method-rule pattern="expression" methodname="setExpression" paramcount="0" />
                <set-next-rule methodname="addRelationship" />

            </pattern>

            <pattern value="aci">

                <object-create-rule classname="org.safehaus.penrose.acl.ACI" />
                <set-properties-rule />
                <call-method-rule pattern="target" methodname="setTarget" paramcount="0" />
                <call-method-rule pattern="attributes" methodname="setAttributes" paramcount="0" />
                <call-method-rule pattern="scope" methodname="setScope" paramcount="0" />
                <call-method-rule pattern="action" methodname="setAction" paramcount="0" />
                <call-method-rule pattern="permission" methodname="setPermission" paramcount="0" />
                <set-next-rule methodname="addACI" />

            </pattern>

            <pattern value="include">
                <object-create-rule classname="org.safehaus.penrose.mapping.MappingRule" />
                <set-properties-rule />
                <set-next-rule methodname="addChildDefinition" />
            </pattern>

            <set-next-rule methodname="addContent" />

        </pattern>
        
    </pattern>

</digester-rules>
