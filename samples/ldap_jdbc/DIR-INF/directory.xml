<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE directory PUBLIC
  "-//Penrose/DTD Directory ${product.specification}//EN"
  "http://penrose.safehaus.org/dtd/directory.dtd">

<directory>

  <entry dn="dc=LDAP-JDBC,dc=Example,dc=com">
    <oc>dcObject</oc>
    <oc>organization</oc>
    <at name="dc" rdn="true">
      <constant>LDAP-JDBC</constant>
    </at>
    <at name="o">
      <constant>LDAP-JDBC</constant>
    </at>
    <aci subject="self">
      <permission>rws</permission>
    </aci>
    <aci>
      <target>ATTRIBUTES</target>
      <attributes>userPassword</attributes>
      <action>deny</action>
      <permission>rs</permission>
    </aci>
    <aci>
      <permission>rs</permission>
    </aci>
  </entry>

  <entry dn="ou=Users,dc=LDAP-JDBC,dc=Example,dc=com">
    <oc>organizationalUnit</oc>
    <at name="ou" rdn="true">
      <constant>Users</constant>
    </at>
  </entry>

  <entry dn="uid=...,ou=Users,dc=LDAP-JDBC,dc=Example,dc=com">
    <entry-class>org.safehaus.penrose.directory.DynamicEntry</entry-class>
    <oc>person</oc>
    <oc>organizationalPerson</oc>
    <oc>inetOrgPerson</oc>
    <at name="uid" rdn="true">
      <variable>lu.uid</variable>
    </at>
    <at name="cn">
      <variable>lu.cn</variable>
    </at>
    <at name="sn">
      <variable>lu.sn</variable>
    </at>
    <at name="userPassword">
      <variable>ju.password</variable>
    </at>
    <source alias="lu">
      <source-name>ldap_users</source-name>
      <field name="uid">
        <variable>uid</variable>
      </field>
      <field name="cn">
        <variable>cn</variable>
      </field>
      <field name="sn">
        <variable>sn</variable>
      </field>
    </source>
    <source alias="ju">
      <source-name>jdbc_users</source-name>
      <field name="username">
        <variable>lu.uid</variable>
      </field>
      <field name="password">
        <variable>userPassword</variable>
      </field>
    </source>
  </entry>

  <entry dn="ou=Groups,dc=LDAP-JDBC,dc=Example,dc=com">
    <oc>organizationalUnit</oc>
    <at name="ou" rdn="true">
      <constant>Groups</constant>
    </at>
  </entry>

  <entry dn="cn=...,ou=Groups,dc=LDAP-JDBC,dc=Example,dc=com">
    <entry-class>org.safehaus.penrose.directory.DynamicEntry</entry-class>
    <oc>groupOfUniqueNames</oc>
    <at name="cn" rdn="true">
      <variable>lg.cn</variable>
    </at>
    <at name="uniqueMember">
      <expression foreach="jug.username" var="username">
return "uid="+username+",ou=Users,dc=LDAP-JDBC,dc=Example,dc=com";
      </expression>
    </at>
    <source alias="lg">
      <source-name>ldap_groups</source-name>
      <field name="cn">
        <variable>cn</variable>
      </field>
    </source>
    <source alias="jug">
      <source-name>jdbc_usergroups</source-name>
      <field name="groupname">
        <variable>lg.cn</variable>
      </field>
      <field name="username">
        <expression foreach="uniqueMember" var="um">
int i=um.indexOf("=");
int j=um.indexOf(",");
return um.substring(i+1, j);
        </expression>
      </field>
    </source>
  </entry>

</directory>
