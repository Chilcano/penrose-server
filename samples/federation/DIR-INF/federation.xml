<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE federation PUBLIC
  "-//Penrose/DTD Federation ${product.specification}//EN"
  "http://penrose.safehaus.org/dtd/federation.dtd">

<federation>
    
  <repository name="ldap" type="LDAP">
    <parameter>
      <param-name>url</param-name>
      <param-value>ldap://localhost/</param-value>
    </parameter>
    <parameter>
      <param-name>suffix</param-name>
      <param-value>dc=my-domain,dc=com</param-value>
    </parameter>
    <parameter>
      <param-name>user</param-name>
      <param-value>cn=Manager,dc=my-domain,dc=com</param-value>
    </parameter>
    <parameter>
      <param-name>password</param-name>
      <param-value>secret</param-value>
    </parameter>
  </repository>

  <repository name="nis" type="NIS">
    <parameter>
      <param-name>server</param-name>
      <param-value>localhost</param-value>
    </parameter>
    <parameter>
      <param-name>domain</param-name>
      <param-value>example.com</param-value>
    </parameter>
  </repository>

  <partition name="ldap">
    <template>partitions/federation/templates/ldap</template>
    <repository-ref name="ldap" repository="ldap"/>
  </partition>

  <partition name="nis_yp">
    <template>partitions/federation/templates/yp</template>
    <repository-ref name="nis" repository="nis"/>
  </partition>

  <partition name="nis">
    <template>partitions/federation/templates/nis</template>
    <repository-ref name="nis" repository="nis"/>
  </partition>

  <partition name="nis_nss">
    <template>partitions/federation/templates/nss</template>
    <repository-ref name="nis" repository="nis"/>
  </partition>

  <partition name="global">
    <template>partitions/federation/templates/global</template>
  </partition>

</federation>