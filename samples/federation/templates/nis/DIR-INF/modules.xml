  <module name="LinkingModule" enabled="true">
    <module-class>org.safehaus.penrose.federation.module.LinkingModule</module-class>
    <parameter>
      <param-name>source</param-name>
      <param-value>LDAP</param-value>
    </parameter>
    <parameter>
      <param-name>target</param-name>
      <param-value>federation.LDAP</param-value>
    </parameter>
    <parameter>
      <param-name>sourceAttribute</param-name>
      <param-value>seeAlso</param-value>
    </parameter>
    <parameter>
      <param-name>sourceKey</param-name>
      <param-value>dn</param-value>
    </parameter>
    <parameter>
      <param-name>targetAttribute</param-name>
      <param-value>seeAlso</param-value>
    </parameter>
    <parameter>
      <param-name>targetKey</param-name>
      <param-value>dn</param-value>
    </parameter>
    <parameter>
      <param-name>mapping</param-name>
      <param-value>import_users</param-value>
