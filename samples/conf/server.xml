<?xml version="1.0" encoding="UTF-8"?>
<!--
<!DOCTYPE server 
	PUBLIC "-//Penrose/Penrose Server Configuration DTD 1.0//EN" 
	"http://penrose.safehaus.org/dtd/penrose-server-config-1.0.dtd">
-->

<server>

  <interpreter>
    <interpreter-name>DEFAULT</interpreter-name>
    <interpreter-class>org.safehaus.penrose.interpreter.DefaultInterpreter</interpreter-class>
  </interpreter>

  <engine>
    <engine-name>DEFAULT</engine-name>
    <engine-class>org.safehaus.penrose.engine.DefaultEngine</engine-class>
    <add-handler-class>org.safehaus.penrose.engine.DefaultAddHandler</add-handler-class>
    <bind-handler-class>org.safehaus.penrose.engine.DefaultBindHandler</bind-handler-class>
    <compare-handler-class>org.safehaus.penrose.engine.DefaultCompareHandler</compare-handler-class>
    <delete-handler-class>org.safehaus.penrose.engine.DefaultDeleteHandler</delete-handler-class>
    <modify-handler-class>org.safehaus.penrose.engine.DefaultModifyHandler</modify-handler-class>
    <modrdn-handler-class>org.safehaus.penrose.engine.DefaultModRdnHandler</modrdn-handler-class>
    <search-handler-class>org.safehaus.penrose.engine.DefaultSearchHandler</search-handler-class>
  </engine>

  <cache>
    <cache-name>DEFAULT</cache-name>
    <cache-class>org.safehaus.penrose.cache.DefaultCache</cache-class>
    <parameter>
      <param-name>driver</param-name>
      <param-value>org.hsqldb.jdbcDriver</param-value>
    </parameter>
    <parameter>
      <param-name>url</param-name>
      <param-value>jdbc:hsqldb:mem:penrose</param-value>
    </parameter>
    <parameter>
      <param-name>user</param-name>
      <param-value>sa</param-value>
    </parameter>
    <parameter>
      <param-name>password</param-name>
      <param-value></param-value>
    </parameter>
    <parameter>
      <param-name>cacheExpiration</param-name>
      <param-value>60</param-value>
    </parameter>
  </cache>

