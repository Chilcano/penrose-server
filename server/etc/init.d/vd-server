#!/bin/bash
#
# vd-server This shell script takes care of starting and stopping ${project.title} Server.
#
# chkconfig: - 38 62
# description: ${project.title} Server ${product.version}.
# processname: java
# pidfile: /usr/local/${product.name}-${product.version}/logs/vd-server.pid

# Source function library.
. /etc/init.d/functions

# Source networking configuration and check that networking is up.
if [ -r /etc/sysconfig/network ] ; then
	. /etc/sysconfig/network
	[ ${NETWORKING} = "no" ] && exit 0
fi

# Source an auxiliary options file if we have one.
if [ -r /etc/sysconfig/vd-server ] ; then
	. /etc/sysconfig/vd-server
fi

VD_SERVER_HOME=/usr/local/${product.name}-${product.version}
PENROSE_SCRIPT=$VD_SERVER_HOME/bin/vd-server.sh

PENROSE_PROG=vd-server
PENROSE_USER=root

[ -x $PENROSE_SCRIPT ] || exit 0

RETVAL=0

function start() {
        # Start daemons.
        echo -n $"Starting $PENROSE_PROG: "
        daemon --user $PENROSE_USER $PENROSE_SCRIPT start
	RETVAL=$?
        echo
	[ $RETVAL -eq 0 ] && touch /var/lock/subsys/vd-server
	return $RETVAL
}

function stop() {
        # Stop daemons.
	echo -n $"Stopping $PENROSE_PROG: "
        daemon --user $PENROSE_USER $PENROSE_SCRIPT stop
	RETVAL=$?
        echo
        [ $RETVAL -eq 0 ] && rm -f /var/lock/subsys/vd-server /var/run/vd-server.args
	return $RETVAL
}

# See how we were called.
case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    status)
        status $PENROSE_PROG
	;;
    restart)
	stop
	start
	;;
    reload)
    	killproc $PENROSE_PROG -HUP
	RETVAL=$?
	;;
    condrestart)
        if [ -f /var/lock/subsys/vd-server ] ; then
            stop
            start
        fi
	;;
    *)
	echo $"Usage: $0 {start|stop|restart|status|condrestart}"
	RETVAL=1
esac

exit $RETVAL
