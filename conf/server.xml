<?xml version="1.0" encoding="UTF-8"?>
<!--
<!DOCTYPE server 
	PUBLIC "-//Penrose/Penrose Server Configuration DTD 1.0//EN" 
	"http://penrose.safehaus.org/dtd/penrose-server-config-1.0.dtd">
-->

<server>

    <interpreter>
        <interpreter-name>DEFAULT</interpreter-name>
        <interpreter-class>org.safehaus.penrose.interpreter.DefaultInterpreter</interpreter-class>
    </interpreter>

    <engine>
        <engine-name>DEFAULT</engine-name>
        <engine-class>org.safehaus.penrose.engine.Engine</engine-class>
    </engine>

    <cache>
        <cache-name>DEFAULT</cache-name>
        <cache-class>org.safehaus.penrose.cache.Cache</cache-class>
    </cache>

    <adapter>
        <adapter-name>JDBC</adapter-name>
        <adapter-class>org.safehaus.penrose.connection.JDBCAdapter</adapter-class>
    </adapter>

    <adapter>
        <adapter-name>JNDI</adapter-name>
        <adapter-class>org.safehaus.penrose.connection.JNDIAdapter</adapter-class>
    </adapter>

    <root>
        <root-dn>cn=manager,dc=penrose,dc=safehaus,dc=org</root-dn>
        <root-password>secret</root-password>
    </root>

</server>
