<?xml version="1.0" encoding="UTF-8"?>
<!--
<!DOCTYPE server 
	PUBLIC "-//Penrose/Penrose Server Configuration DTD 1.0//EN" 
	"http://penrose.safehaus.org/dtd/penrose-server-config-1.0.dtd">
-->

<server>

  <interpreter>
    <interpreter-name>DEFAULT</interpreter-name>
    <interpreter-class>org.safehaus.penrose.interpreter.DefaultInterpreter</interpreter-class>
  </interpreter>

  <engine>
    <engine-name>DEFAULT</engine-name>
    <engine-class>org.safehaus.penrose.engine.impl.DefaultEngine</engine-class>
    <add-handler-class>org.safehaus.penrose.engine.impl.DefaultAddHandler</add-handler-class>
    <bind-handler-class>org.safehaus.penrose.engine.impl.DefaultBindHandler</bind-handler-class>
    <compare-handler-class>org.safehaus.penrose.engine.impl.DefaultCompareHandler</compare-handler-class>
    <delete-handler-class>org.safehaus.penrose.engine.impl.DefaultDeleteHandler</delete-handler-class>
    <modify-handler-class>org.safehaus.penrose.engine.impl.DefaultModifyHandler</modify-handler-class>
    <modrdn-handler-class>org.safehaus.penrose.engine.impl.DefaultModRdnHandler</modrdn-handler-class>
    <search-handler-class>org.safehaus.penrose.engine.impl.DefaultSearchHandler</search-handler-class>
  </engine>

  <cache>
    <cache-name>DEFAULT</cache-name>
    <cache-class>org.safehaus.penrose.cache.Cache</cache-class>
  </cache>

  <adapter>
    <adapter-name>JDBC</adapter-name>
    <adapter-class>org.safehaus.penrose.connection.JDBCAdapter</adapter-class>
  </adapter>

  <adapter>
    <adapter-name>JNDI</adapter-name>
    <adapter-class>org.safehaus.penrose.connection.JNDIAdapter</adapter-class>
  </adapter>

  <root>
    <root-dn>cn=manager,dc=penrose,dc=safehaus,dc=org</root-dn>
    <root-password>secret</root-password>
  </root>

</server>
